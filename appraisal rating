import java.util.*;

class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
         System.out.println("Enter salary:");
         double salary=scanner.nextDouble();
          System.out.println("Enter the performance appraisal rating:");
         double appraisal=scanner.nextDouble();
         if(salary<0 || appraisal<1 || appraisal>5 )
{
System.out.println("Invalid input");
}
  double incrementedsalary=0;
if(appraisal>1 || appraisal>=3)
{
incrementedsalary=salary + (salary*0.10);
}
else if(appraisal>3.1 || appraisal>=4)
{
incrementedsalary=salary + (salary*0.25);
}
if(appraisal>4.1 || appraisal>=5)
{
incrementedsalary=salary + (salary*0.30);
}
System.out.println((int)incrementedsalary);
}}





